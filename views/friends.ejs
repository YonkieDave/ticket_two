<body>
    <div class="form-control mr-sm-2">
        <a href="/profile">Regresar al perfil</a>
    </div>
    <div class="content">
        <div class="card">
     
            <table id="budget_table">
              <thead class="header">
                <tr>
                  <th class="title" scope="col">NOMBRE</th>
                  <th class="title" scope="col">EDUCACIÃ“N</th>
                  <th class="title" scope="col">CORREO</th>
